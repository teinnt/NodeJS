extends ../layouts/common

block content
    h1 
        span User List
        a.btn.btn-primary.m-3(href='/users/create') Create new user

    form(action='/users/search', method='GET', class='d-flex') 
        input.form-control(type='text', name='q')
        button.btn.btn-primary Seach

    table.table
        tr
            th Name 
            th Phone 
            th View 

        each user in users
            tr
                td= user.name 
                td= user.phone 
                td 
                    a.btn.btn-light(href='/users/' + user.id) View